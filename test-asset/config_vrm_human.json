{
  "skeleton": {
    "clipped_file": "{{clipped_file}}",
    "renamed_file": "{{prefix}}.{{skeleton_suffix}}-ozz",
    "import": {
      "enable": true,
      "raw": false,
      "types": {
        "skeleton": true,
        "marker": false,
        "camera": false,
        "geometry": false,
        "light": false,
        "null": false,
        "any": false
      }
    }
  },
  "animations": [
    {
      "clip": "Idle_(Empty|Axe)",
      "filename": "{{prefix}}_*.{{animation_suffix}}-ozz",
      "raw": false,
      "additive": false,
      "optimize": true
    },
    {
      "clip": "(Run|Walk)(Start|Stop)?(_\\w{1,4})?_(Empty|Axe)",
      "filename": "{{prefix}}_*.{{animation_suffix}}-ozz",
      "raw": false,
      "additive": false,
      "optimize": true,
      "tracks": {
        <% if (root_motion) { %>
        "motion": {
          "enable": true,
          "filename": "{{prefix}}_*.rm-ozz",
          "root_motion_joint": "Root"
        }
        <% } %>
      }
    },
    {
      "clip": "Attack_\\d\\d\\w",
      "filename": "{{prefix}}_*.{{animation_suffix}}-ozz",
      "raw": false,
      "additive": false,
      "optimize": true
      // "tracks": {
